<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Figure name:</label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">
  <br>
  <br>
  <label>Title:</label>
  <% Title.all.each do |title| %>
  <label><%= title.name %></label>
  <input id="<%= title.name %>" type="checkbox" value="<%= title.name %>" name="figure[title_ids]"<%= "checked" if @figure.titles.include?(title) %>>
  <% end %>
  <br>
  <br>
  <label>New Title:</label>
  <input type="text" name="title[name]" id="new_title">
  <br>
  <br>
  <label>Landmark:</label>
  <% Landmark.all.each do |landmark| %>
  <label><%= landmark.name %></label>
  <input id="<%= landmark.name %>" type="checkbox" value="<%= landmark.name %>" name="figure[landmark_ids]"<%= "checked" if @figure.landmarks.include?(landmark) %>>
  <% end %>
  <br>
  <br>
  <label>New Landmark:</label>
  <input type="text" name=figure[landmark_ids]" id="new_landmark">
  <br>
  <br>
  <input type="submit" value="Edit Figure">
</form>
